# =========================================================
# SEGURIDAD Y AUTENTICACIÓN
# =========================================================

# Clave secreta para firmar tokens JWT
SECRET_KEY=your_secret_key_here

# Duración del token de acceso en minutos
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Ruta del archivo de clave de encriptación
ENC_KEY_PATH=./enc.key

# =========================================================
# BASE DE DATOS
# =========================================================

# URL de la base de datos (SQLite local por defecto)
DATABASE_URL=sqlite:///./asistente_docs.db

# Esta variable evita limpiar la base de datos al correr tests
TESTING=0

# =========================================================
# SERVIDOR Y CORS
# =========================================================

# Modo de depuración: True = desarrollo, False = producción
DEBUG=True

# Ambiente actual
ENV=development

# Orígenes permitidos para CORS (Angular, React, etc.)
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# =========================================================
# SERVICIO DE EMAIL
# =========================================================

# API Key de Resend para envío de emails
RESEND_API_KEY=re_test_api_key_here

# Email del remitente para notificaciones
FROM_EMAIL=Curim <noreply@example.com>

# =========================================================
# Curim - INTELIGENCIA ARTIFICIAL
# =========================================================

# API Key de Google Gemini (OBLIGATORIO)
GEMINI_API_KEY=AIzaSyXXXXXX-demo-key-XXXXXX

# Configuración RAG (Retrieval-Augmented Generation)
CHUNK_SIZE=500
CHUNK_OVERLAP=100
TOP_K_RESULTS=3

# Ruta de almacenamiento de datos de Curim
Curim_STORAGE_PATH=./storage/Curim_data

# Configuración de caché
Curim_CACHE_TTL_DAYS=7
Curim_CACHE_ENABLED=True

# =========================================================
# VOZ (Opcional - para funcionalidad de voz)
# =========================================================

# Velocidad de voz (porcentaje: +20% = más rápido)
VOICE_SPEED=+20%

# Voz de Edge-TTS (español de Panamá)
DEFAULT_VOICE=es-PA-MargaritaNeural

# =========================================================
# LOGGING Y MONITOREO
# =========================================================

# Nivel de logging: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Habilitar logs de Curim
Curim_LOGGING=True
